version: "3.9"

services:
  bazarr:
    image: {{ bazarr_image }}
    container_name: {{ bazarr_container_name }}
    expose:
      - "{{ bazarr_port }}"
    environment:
      - PUID={{ bazarr_puid }}
      - PGID={{ bazarr_pgid }}
      - TZ={{ bazarr_timezone }}
      - VIRTUAL_HOST=bazarr.{{ domain_name }}
    volumes:
      - {{ bazarr_config_path }}:/config
      - {{ bazarr_tv_path }}:/tv
      - {{ bazarr_movies_path }}:/movies
      - {{ bazarr_download_path }}:/downloads
    networks:
      - media
      - proxy
    restart: unless-stopped

networks:
  media:
    driver: bridge
  proxy:
    external: true

