version: "3.9"

services:
  prowlarr:
    image: {{ prowlarr_image }}
    container_name: {{ prowlarr_container_name }}
    expose:
      - "9696"
    environment:
      - PUID={{ prowlarr_puid }}
      - PGID={{ prowlarr_pgid }}
      - TZ={{ prowlarr_timezone }}
      - VIRTUAL_HOST=prowlarr.{{ domain_name }}
    volumes:
      - {{ prowlarr_config_path }}:/config
    networks:
      - media
      - proxy
    restart: unless-stopped

networks:
  media:
    driver: bridge
  proxy:
    external: true

